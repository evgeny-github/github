<h1>Listing goods</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Count</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goods.each do |good| %>
  <tr>
    <td><%= good.title %></td>
    <td><%= good.count %></td>
    <td><%= good.price %></td>
    <td><%= link_to 'Show', good %></td>
    <td><%= link_to 'Edit', edit_good_path(good) %></td>
    <td><%= link_to 'Destroy', good, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

